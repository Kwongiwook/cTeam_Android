<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 슬라이드 배너  일단 ImageView로 넣어 놨습니다.-->
            <ImageView
                android:id="@+id/mainImgV"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="내 활동"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
                android:textStyle="bold"/>

            <!-- 두피기록으로 넘어가는 버튼 -->
            <Button
                android:id="@+id/mainMemoBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="두피 기록"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <!-- 커뮤니티로 넘어가는 버튼-->
            <Button
                android:id="@+id/mainCommuBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="게시판 기록"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <!-- QnA로 넘어가는 버튼 -->
            <Button
                android:id="@+id/mainQnaBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="QnA"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <!-- 예약으로 넘어가는 버튼 -->
            <Button
                android:id="@+id/mainRsvBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="예약"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="칼럼"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <!-- 이 부분은 선생님이 추천 해주신 부분 -->
                <!-- 더보기 글자를 누르면 column_list 로 넘어감 -->
                <TextView
                    android:id="@+id/mainMoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#113399"
                    android:layout_gravity="bottom"/>

            </LinearLayout>


            <!-- 칼럼의 간략 리스트 -->
            <ListView
                android:id="@+id/mainColumnLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" />




        </LinearLayout>
    </ScrollView>

</LinearLayout>