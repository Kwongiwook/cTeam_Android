<?xml version="1.0" encoding="utf-8"?>
<!-- 예약확인에서 이름을 누르면 넘어가는 예약확인 세부부분
    expert_reservation → reservation_sub -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/btn_back_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_Check"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffffff"
            android:text="예약확인"
            android:gravity="center|top"
            android:paddingTop="20dp"
            android:textSize="40dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <!-- ↓밑에 부분은 사진의 컬러가 변경되었으면 좋겠습니다.
      변경하고싶은 색상 : #ffcc40 /
      참고 블로그 : https://leveloper.tistory.com/166-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/rv_check"/>
    <TextView
        android:id="@+id/tv_Doucheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="고객이름 : 김한울 \n 시술내용 : 커트 + 두피관리 \n 담당디자이너 : 지욱T \n 예약시간 : 15 :30"
        android:textSize="20dp"
        android:gravity="center"/>



</LinearLayout>