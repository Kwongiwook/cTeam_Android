            android:id="@+id/btn_Answer"
            android:layout_weight="1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="답변하기"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"/>
