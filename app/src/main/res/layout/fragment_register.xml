<?xml version="1.0" encoding="utf-8"?>
<!--tools:context=".JoinActivity"-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F0F8FF">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Page"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/start_register_text_border"
        android:layout_marginBottom="70dp"/>

    <LinearLayout
        android:weightSum="2"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="아이디"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/regId"
            android:layout_weight="1.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="아이디를 입력해주세요."
            android:layout_marginRight="20dp"
            android:paddingLeft="15dp"
            android:background="@drawable/start_register_text_border"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="비밀번호"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/regPwd"
            android:layout_weight="1.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="비밀번호를 입력하세요."
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/start_register_text_border"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="닉네임"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/regNick"
            android:layout_weight="1.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="닉네임을 입력해주세요."
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/start_register_text_border"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/regEmail"
            android:layout_weight="1.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="이메일을 입력해주세요."
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/start_register_text_border"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/regEmailCheck"
        android:layout_weight="1.2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="이메일 중복확인"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:background="@drawable/start_login_btn_border"/>


    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:background="@drawable/start_login_btn_border"
            android:id="@+id/regSubmit"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="가입하기"
            android:textStyle="bold"/>

        <!-- 버튼사이 공간을 정렬하기위해 의미없는 텍스트뷰 -->
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


        <Button
            android:background="@drawable/start_login_btn_border"
            android:id="@+id/regCancel"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="가입취소"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미 회원이신가요? 여기를 눌러 로그인 하세요!!"
        android:textSize="15dp"
        android:gravity="center|bottom"
        android:textStyle="bold"
        android:textColor="#000080"/>


</LinearLayout>